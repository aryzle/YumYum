<%= form_for(@foodpost) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field" id="new-post">
    <p id="formheader">Add New Event</p>
    <%= f.text_area :content, placeholder: "Describe Your Event...",
                    :class => 'content' %>
    <div class="counter" style="text-align: right;"></div>
    <p id="formheader">When</p>
    <%= f.text_field :date, :class => 'datepicker' %>
    <%= f.time_field :start_time, :ampm => true, :minute_step => 30 %>
    </br><p id="formheader">Where</p>
    <%= f.text_field :location, placeholder: " ex: Rickets 201", 
                     :class => 'location' %>
    <%= f.submit "Post", class: "btn btn-large btn-primary" %>
  </div>
<% end %>
