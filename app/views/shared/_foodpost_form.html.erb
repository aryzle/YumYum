<%= form_for(@foodpost, ) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field" id="new-post">
    Details
    <%= f.text_area :content, placeholder: "Compose new foodpost...",
                    :class => 'content', :required => 'required' %>
    <div class="counter" style="text-align: right;"></div>
    When
    <%= f.text_field :date, :class => 'datepicker', :required => 'required'%>
    <%= f.time_field :start_time, :ampm => true, :minute_step => 30,
                     :required => 'required'%>
    </br>Where
    <%= f.text_field :location, placeholder: " ex: Rickets 201", 
                     :class => 'location', :required => 'required'%>
    <%= f.submit "Post", class: "btn btn-large btn-primary" %>
  </div>
<% end %>
