<div class="row">
  <div class= "span6">
    <% if signed_in? %>
      <%= image_tag("pizza.png", :id => "pizza") %>
      <%= render 'shared/foodpost_form' %>
    <% else %>
      <%= image_tag("pizza.png", :id => "pizza-no-hover") %>
    <% end %>
    <ol class="foodposts">
      <%= render @foodposts %>
    </ol>
    <%= will_paginate %>
  </div>
  <div class="span6">
    <span id="map-canvas" style="height: 500px; width: 500px;"></span>
    <span id="main-map" style="height: 1px;"></span>
  </div>
</div>


